    <title>怎样掌握新软件</title>
    <link href="http://yoursite.com/2019/12/29/%E5%BD%A2%E8%80%8C%E4%B8%8B/%E6%80%8E%E6%A0%B7%E6%8E%8C%E6%8F%A1%E6%96%B0%E8%BD%AF%E4%BB%B6/"/>
    <id>http://yoursite.com/2019/12/29/%E5%BD%A2%E8%80%8C%E4%B8%8B/%E6%80%8E%E6%A0%B7%E6%8E%8C%E6%8F%A1%E6%96%B0%E8%BD%AF%E4%BB%B6/</id>
    <published>2019-12-29T07:59:24.302Z</published>
